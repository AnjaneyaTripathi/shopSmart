<div class="box">
	<div class="home">
		<div class="row">
			<div class="col-md-3" id="palette">
				<h3>Search by Category</h3>
				<hr>
				<div id="paletteItems">
					<p onclick="location.href='/home/Fruits'">Fruits</p>
					<p onclick="location.href='/home/Vegetables'">Vegetables</p>
					<p onclick="location.href='/home/Dairy Products'">Dairy Products</p>
					<p onclick="location.href='/home/Confectionaries'">Confectionaries</p>
					<p onclick="location.href='/home/Stationary'">Stationery</p>
					<p onclick="location.href='/home/Drinks'">Drinks</p>
					<p onclick="location.href='/home/Household Items'">Household Items</p>
					<p onclick="location.href='/home/Grains and Pulses'">Grains and Pulses</p>
				</div>
			</div>
			<div class="col-md-9">
				<h3><%= status %></h3>
				<hr>
				<div class="row">
				<% products.forEach(function(product) { %>
					<% if(product.status == status) { %>
						<div class="col-md-4 col-sm-6">
							<div class="thumbnail-image">
								<img src="<%= product.image %>" onclick="location.href='/details/<%= product._id %>'">
							</div>
							<br>
							<div class="row">
								<div class="col-sm-7">
									<h5><%= product.name %></h5>
								</div>
								<div class="col-sm-5">
									<h5><%= product.price %>/<%= product.unit %></h5>
								</div>
							</div>
						</div>
					<% } %>
				<% }); %>
				</div>
			</div>	
		</div>
	</div>
</div>

