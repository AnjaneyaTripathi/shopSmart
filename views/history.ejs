<div class="history">
	<h1>Shopping History</h1>
	<% history.forEach(function(h) { %>
		<% var slot = h.slot %>
		<% var message = "Order is being processed." %>
		<% if(h.username == user.username) { %>
			<% var d = new Date(parseInt(h.date)).toString().slice(0,15); %>
			<% if(h.completed === "green") { %>
				<% message = "Ready for Pickup"; %>
			<% } %>
			<% if(h.completed === "blue") { %>
				<% message = "Delivered"; %>
			<% } %>
			<hr>
			<div class="row">
				<div class="col-sm-6">
					<h4 id="date"><%= d %></h4>
				</div>
				<div class="col-sm-6">
					<p style="color: <%= h.completed %>"><%= message %></p>
					<% if(h.completed === "red") { %>
						<p style="color: black">Your slot is from <%= h.slot %>:00 to <%= h.slot %>:59</p>
					<% } %>
					<% if(h.completed === "green") { %>
						<p style="color: black">Your slot is from <%= h.slot %>:00 to <%= h.slot %>:59</p>
					<% } %>
				</div>
			</div>
			<br>
			<div class="row">
				<% h.product.forEach(function(p) { %>
					<div class="col-sm-3">
						<h5><%= p.name %></h5>
					</div>
					<div class="col-sm-3">
						<img src="<%= p.image %>" id="cartImage">
					</div>
					<hr>
					<div class="col-sm-3">
						<p>Rs. <%= p.price %>/<%= p.unit %></p>
					</div>
					<hr>
					<div class="col-sm-3">
					    <p><%= p.quantity %> <%= p.unit %></p>
					</div>
				<% }); %>
				<hr class="my-4">
			</div>
		<% } %>
	<% }); %>
</div>

